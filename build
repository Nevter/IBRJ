#!/bin/bash
# Build script by: Luke Neville

# To run, ensure user has execute privileges and run ./build

if [ "$IBNDIR" == "" ]; then
IBNDIR=.
fi

IBNSRC=$IBNDIR/src
IBNBIN=$IBNDIR/bin
IBNTEST=$IBNDIR/test
LIB=/home/luke/Honours/Project/JavaIBN/lib
LIBJAR=$LIB/bin/:$LIB/jxl.jar:$LIB/log4j-core.jar:$LIB/log4j.jar:$LIB/metouia.jar:$LIB/mysql.jar:$LIB/ojdbc14_g.jar:$LIB/openjgraph.jar:$LIB/postgresql.jar:$LIB/skinlf.jar
IBNCLASSPATH=$IBNDIR:$LIBJAR
IBN=/edu/uct/ibn

javac -g:none -d $IBNBIN  -sourcepath $IBNSRC -cp $IBNCLASSPATH $IBNSRC/$IBN/*.java $IBNSRC/$IBN/gui/*.java $IBNSRC/$IBN/implication/*.java $IBNSRC/$IBN/util/*.java

javac -g:none -d $IBNBIN  -sourcepath $IBNSRC -cp $IBNCLASSPATH $IBNTEST/edu/uct/ibntest/*.java
